                                 <small class=" form-Message" > </small><hr />
                            </div>

                            <div class=" form-group">
                                <label for="nameproduct" class="form-label">Tên Sản Phẩm</label>
                                <input type="text" class="form-control" id="ProductName" name="ProductName"  aria-describedby="">
                               @*  <small> Error</small><hr /> *@

                            </div>
                                <label for="exampleInputEmail1" class="form-label">Mô tả</label>
                                <input type="text" class="form-control" id="Description" name="Description"  aria-describedby="">
                               @*  <small> Error</small><hr /> *@

                            <div class=" form-group">
                                <label for="exampleInputEmail1" class="form-label">Giá</label>
                                <input type="text" class="form-control" id="UnitPrice" name="UnitPrice"  aria-describedby="">
                                @* <small> Error</small><hr /> *@
                            </div>

                        </div>
                    </div>
                </div>

               @*  <div class="col-md-4">
                    <h5 class="card-title fw-semibold mb-4">Bài viết </h5>
