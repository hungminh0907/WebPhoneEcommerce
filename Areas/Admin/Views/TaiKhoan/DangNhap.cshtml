@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DangNhap</title>
    <link rel="stylesheet" href="~/css/taikhoan.css" asp-append-version="true" />
</head>
<body style="height: 760px; display: flex; justify-content: center; align-items: center;">
    <div class="form-box">
        <form class="form" asp-area="Admin" asp-controller="TaiKhoan" asp-action="DangNhap" method="post">
            <span class="title">Login</span>
            <div class="form-container">
                <input type="email" label="Email" name="Email" class="input" placeholder="Email">
                <input type="text" name="Username" class="input" placeholder="User Name">
                <input type="password" label="Password" name="Password" class="input" placeholder="Password">
                @if (Context.Request.Cookies.ContainsKey("UserName"))
                {
                    <input type="text" name="Token" class="input" placeholder="Token" value=@Context.Request.Cookies["Token"] hidden="hidden">
                }
                else
                {
                    <input type="text" name="Token" class="input" placeholder="Token" value="Default" hidden="hidden">
                }
            </div>
            <button type="submit">Login</button>
        </form>
        <div class="form-section">
            <p>Have an account? <a asp-area="Admin" asp-controller="TaiKhoan" asp-action="DangKy">Register</a> </p>
        </div>
    </div>
</body>
</html>
